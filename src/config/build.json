{
    "assets": {
        "src": [
            "./src/assets/**"
        ],
        "dest": "./build/",
        "watch": "./src/assets/**/**"
    },
    "scripts": {
        "src": [
            "./src/scripts/app.js"
        ],
        "build": "main.min.js",
        "dest": "./build/js/",
        "watch": ["./src/scripts/**/*.js"],

        "options": {
            "insertGlobals": true,
            "debug": false
        }
    },
    "serve": {
        "root": [
            "build/"
        ],
        "hostname": "127.0.0.1",
        "port": 8088
    }
}
